{
  "Application": {
    "Name": "Digital Asset Management (DAM)",
    "Version": "1.0.0",
    "Environment": "Base"
  },

  "DAM": {
    "StoragePath": "assets/",
    "MaxUploadSizeMB": 50,
    "AllowedFileTypes": [ ".jpg", ".png", ".pdf", ".mp4" ],
    "EnableIndexing": true,
    "IndexingStrategy": "default"
  },

  "Database": {
    "Provider": "SqlServer",
    "ConnectionString": "Server=localhost;Database=DAM;Trusted_Connection=True;"
  },

  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "System": "Warning"
    }
  }
}